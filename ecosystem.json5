{
  "apps": [{
    "name"  : "gps-track",
    "script": "yarn",
    "args": "server"
  }, {
    "name"  : "gps-track-viewer",
    "script": "yarn",
    "args": "viewer"
  }],
  "deploy": {
    "production": {
      "user"       : "me",
      "host"       : "balthazargronon.com",
      "ref"        : "origin/master",
      "repo"       : "git@github.com:balthazar/gps-track.git",
      "path"       : "/var/www/gps-track",
      "post-deploy": "yarn && rm -rf dist && yarn build && pm2 startOrRestart ecosystem.json5 --env production --log-date-format 'DD-MM HH:mm:ss.SSS'",
    }
  }
}
